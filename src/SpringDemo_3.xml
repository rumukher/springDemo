<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="org.rupayan.javabrains.Triangle" name="triangle_alias1" autowire="byName">
	</bean>

	<bean id="pointA" class="org.rupayan.javabrains.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>

	<bean id="pointB" class="org.rupayan.javabrains.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>

	<bean id="pointC" class="org.rupayan.javabrains.Point">
		<property name="x" value="20"/>
		<property name="y" value="0"/>
	</bean>
	
	<alias name="triangle" alias="triangle_alias2"/>
</beans>
